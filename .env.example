# Hummingbot monitor environment configuration (example)
# Copy to .env and adjust paths/values for your environment.

# Source log file to scan for alerts
HB_LOG_FILE=~/hummingbot/logs/latest.log

# State file to persist last processed line
HB_STATE_FILE=~/hummingbot_master/hb_log_monitor.state

# App event log destination (structured JSON logs from this tool)
HB_EVENT_LOG_FILE=~/hummingbot_master/hb_log_monitor.log

# Screen session name to kill upon alerts
HB_SCREEN_SESSION=hummingbot

# Command to run to cancel orders upon alerts
# For using with Cron use absolute path of the script
HB_CANCEL_CMD="/root/bitfinex-maker-kit/venv/bin/bitfinex-maker-kit cancel --symbol tPNKUSD"

# Comma-separated match levels to trigger actions
# Valid values include: DEBUG, INFO, WARNING, ERROR, CRITICAL
HB_MATCH_LEVELS=ERROR,WARNING

# Timeout (seconds) for external commands
HB_CMD_TIMEOUT=60

# Comma-separated substrings. Case-insensitive. Each pattern is checked individually.
HB_SKIP_PATTERNS="'float' object is not subscriptable,temporary network error,benign warning"

BITFINEX_API_KEY=
BITFINEX_API_SECRET=
