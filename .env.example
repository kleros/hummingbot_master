# Hummingbot Spread Monitor environment configuration (example)
# Copy to .env and adjust paths/values for your environment.

# State file to persist current book state
SPREAD_STATE_FILE=~/hummingbot_master/states/spread.state

# App event log destination (structured JSON logs from this tool)
SPREAD_EVENT_LOG_FILE=~/hummingbot_master/logs/spread_log_monitor.log

# Status log destination for monitoring dashboard
STATUS_LOG_FILE=~/hummingbot_master/logs/status.log

# State file to persist asset inventory state
ASSETS_STATE_FILE=~/hummingbot_master/states/assets.state

# Screen session name to kill if spread threshold breached
HB_SCREEN_SESSION=hummingbot

# Command to run to cancel orders upon alerts
# For using with Cron use absolute path of the script
HB_CANCEL_CMD="/root/bitfinex-maker-kit/venv/bin/bitfinex-maker-kit cancel --symbol tPNKUSD"

# Command to list open orders for spread checking
HB_LIST_CMD="/root/bitfinex-maker-kit/venv/bin/bitfinex-maker-kit list --symbol tPNKUSD"

# Spread threshold (in percent) to trigger safety actions
HB_SPREAD_PERCENT_THRESHOLD=0.5

# Minimum order amount to consider when calculating spread
HB_MIN_ORDER_AMOUNT=0

# Timeout (seconds) for external commands
HB_CMD_TIMEOUT=60

# Optional API keys (used by other scripts like put_order.py)
BITFINEX_API_KEY=
BITFINEX_API_SECRET=
